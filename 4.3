#include<iostream>
#include<string>
using namespace std;
bool palindrome(const string & s,int start, int end){
    while(start<end){
        if(s[start]!=s[end]){
            return false;
        }
        start++;
        end--;
    }
    return true;
}
int palindromeIndex(const string& s){
    int start=0;
    int end=s.length()-1;
    while(start<end){
        if(s[start]!=s[end]){
            if(palindrome(s,start+1,end)){
                return start;
            }else if(palindrome(s,start,end-1)){
                return end;
            }else{
                return -1;
            }
        }
        start++;
        end--;
    }
    return -1;
}
int main(){
    int q;
    cin>>q;
    for(int i=0;i<q;++i){
        string s;
        cin>>s;
        int resul=palindromeIndex(s);
        cout<<resul<<endl;
    }
    return 0;
}



