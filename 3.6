#include<string>
#include<cctype>

using namespace std;
string caesarCipher(string s, int k){
    for(char&c: s){
        if(isalpha(c)){
            char a=isupper(c)? 'A':'a';
            c=a+(c-a+k)%26;
        }
    }
    return s;
}
