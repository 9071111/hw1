#include<iostream>
#include<cmath>
using namespace std;
int countFont(int n) {
    int ret;
    if (n%2==0) {ret = n/2;}
    else if (n%2==1) {ret = (n-1)/2;}
    return ret;
}

int countBack(int n, int p) {
    int ret;
    ret = (n-p)/2;
    return ret;
}
int pageCount(int n, int p) {
    if (p==1) return 0;
    else if (p==n) return 0;
    else if (n%2==0 && p==n-1) return 1;
    else if (n%2==1 && p==n-1) return 0;
    else {
        int countF = countFont(p);
        int countB = countBack(n,p);
        if (countF <= countB) return countF;
        else return countB;
    }
}
int main(){
    int n,p;
    cin>>n;
    cin>>p;
    int result=pageCount(n,p);
    cout<<result<<endl;
    return 0;
}

